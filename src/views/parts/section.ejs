<script>
        $(function() {
            $(".searchArea").hide();
            $("#searchResultTitle").hide();
            $("#loadingIcon").hide();
        })
        $("#search, .searchArea").hover(function () {  
          $(".searchArea").show();
        }, function () {
          $(".searchArea").hide();
        });
        $("#search").keyup(function () {
          $("#loadingIcon").show();
          $(".searchArea").show();
          $(".showMore").hide();
          $("#searchResults").hide();
          $("#searchResultTitle").hide();
          $.ajax({
            type: "POST",
            url: "/api/search",
            data: {key: $("#search").val()},
            dataType: "json",
            success: function (response) {
            $("#loadingIcon").hide();
            $("#searchResults").show();
              let message = "";
              let data = response.data;
              if (data.length == 0) {
                $('searchResultTitle').hide();
                $("#searchResults").html("<i class='fal fa-bug'></i>&nbsp;No results were found.");
                $('.showMore').hide();
                return;
              }
              $("#searchResultTitle").show();
              for (let i = 0; i < data.length; i++) {
                if (i === 5) break; 
                let bot = data[i];
                message += `
                <a href="/bot/${bot.botID}">
                <div translate="no" class="mt-2 resultBotBanner">
                  <img title="Disbotlist.xyz" class="mr-2" width="48" onError="imgError(this)" style="border-radius: 8px;" src="${bot.avatar}" />${bot.username}
                </div>
            </a>
            `;
              }
              if (data.length > 5) {
                $(".showMore").show();  
                setInterval(() => {
                  $(".showMoreLink").attr("value", `/search?q=${$("#search").val()}&page=1`);
                }, 100);
                $(".showMore").click(function () { window.location.href = $(".showMoreLink").val(); });    
              }
              $("#searchResults").html(message);
            }
          });
        });
</script>
